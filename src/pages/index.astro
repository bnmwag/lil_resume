---
import '@fontsource/be-vietnam-pro/100.css';
import '@fontsource/be-vietnam-pro/200.css';
import '@fontsource/be-vietnam-pro/300.css';
import '@fontsource/be-vietnam-pro/400.css';
import '@fontsource/be-vietnam-pro/500.css';
import '@fontsource/be-vietnam-pro/600.css';
import '@fontsource/be-vietnam-pro/700.css';
import '@fontsource/be-vietnam-pro/800.css';
import '@fontsource/be-vietnam-pro/900.css';

import CaseCard from '../components/case-card.astro';
import { Analytics } from '@vercel/analytics/react';
import { SEO } from 'astro-seo';
import type { Project } from '../types.ts';

const projects: Project[] = [
	{
		title: 'studio',
		url: 'https://studio.bnmwag.dev',
		branch: 'studio',
		tags: ['anything imaginable'],
	},
	{
		title: 'HW-Technik',
		url: 'https://hwtechnik.at',
		branch: 'freelance',
		tags: ['web', 'design', 'hosting'],
	},
	{
		title: 'assaabloy',
		url: 'https://assaabloy.at',
		branch: 'sps',
		tags: ['web', 'webgl', 'design'],
	},
	{
		title: 'Neuronet.ink',
		url: 'https://neuronet.ink',
		branch: 'freelance',
		tags: ['design', 'web', 'blog', 'cms', 'hosting'],
	},
];
---

<html lang='en'>
	<head>
		<meta charset='utf-8' />
		<SEO
			title='bnmwag'
			description='Creative developer from Linz, Austria'
			openGraph={{
				basic: {
					title: 'bnmwag',
					type: 'portfolio',
					image: 'https://f.bnmwag.dev/opengraph-image.jpg',
				},
			}}
			extend={{
				link: [{ rel: 'icon', href: '/favicon.svg' }],
				meta: [
					{ name: 'viewport', content: 'width=device-width' },
					{ name: 'generator', content: Astro.generator },
				],
			}}
		/>

		<style>
			body,
			html {
				overflow: hidden;
			}

			@keyframes ping {
				75%,
				100% {
					transform: scale(4);
					opacity: 0;
				}
			}
			.anim-ping {
				animation: ping 2s cubic-bezier(0, 0, 0.2, 1) infinite;
			}
		</style>
	</head>
	<body class='bg-black text-neutral-100 font-viet'>
		<Analytics client:load />
		<div class='w-full px-[120px] grid grid-cols-2'>
			<div
				class='fixed px-[120px] inset-0 -z-10 bg-black pointer-events-none flex items-center justify-between pt-[83px]'
			>
				<div
					class='absolute top-[83px] left-0 bg-gradient-to-b from-[rgba(0,0,0,0.75)] to-[rgba(0,0,0,0)] h-[650px] w-full'
				>
				</div>
				<div
					class='absolute bottom-[0] left-0 bg-gradient-to-t from-[rgba(0,0,0,0.75)] to-[rgba(0,0,0,0)] h-[650px] w-full'
				>
				</div>
				<div class='w-px h-full bg-neutral-800'></div>
				<!-- <div class='w-px h-full bg-neutral-800'></div> -->
				<div class='w-px h-full bg-neutral-800'></div>
				<!-- <div class='w-px h-full bg-neutral-800'></div> -->
				<div class='w-px h-full bg-neutral-800'></div>
			</div>
			<nav
				class='fixed top-0 left-0 w-screen py-8 px-[120px] pl-[50vw] flex items-start justify-between z-50'
			>
				<a href='/'>bnmwag</a>
				<div class='flex flex-col gap-y-4 items-end'>
					<a href='mailto:bnm.wag@gmail.com' class='cursor-pointer'
						>say hi - <span class='text-neutral-500'
							>bnm.wag@gmail.com</span
						></a
					>
					<div class='flex items-center gap-x-2'>
						<div class='h-2 w-2 bg-emerald-500 rounded-full'>
							<div
								class='anim-ping | h-2 w-2 bg-emerald-500 rounded-full'
							>
							</div>
						</div>
						<span class='text-emerald-500'>available for work</span>
					</div>
				</div>
			</nav>
			<div class='min-h-screen py-[50vh] pb-[30vw]'>
				<h1 class='text-2xl animate-pulse'>Work comes soon</h1>
				<!-- <div class='space-y-36'>
					{projects.map((project) => <CaseCard {...project} />)}
				</div> -->
			</div>
			<div class='fixed right-0 w-1/2 h-full space-y-12 pt-[50vh]'>
				<h1
					class='font-light text-2xl tracking-[-0.05rem] flex items-center gap-x-2'
				>
					Creative developer from Linz
					<span
						class='flag h-[calc(12px*1.5)] aspect-[3/2] bg-white inline-flex flex-col justify-between'
					>
						<span class='w-full h-1/3 bg-red-500'></span>
						<span class='w-full h-1/3 bg-red-500'></span>
					</span>Austria
				</h1>
				<p class='text-neutral-500 text-xl font-light'>
					Passionate junior developer creating <br />
					 innovative solutions through code.
				</p>
			</div>
		</div>
		<script>
			import Lenis from '@studio-freight/lenis';

			const lenis = new Lenis();

			function raf(time: number) {
				lenis.raf(time);
				requestAnimationFrame(raf);
			}

			requestAnimationFrame(raf);
		</script>
	</body>
</html>
