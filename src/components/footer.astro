import { getCurrentTimeInVienna } from "@/lib/utils";
import ThemeToggles from "./theme-toggles";

const initialTime = getCurrentTimeInVienna();
---

<script>
  import { getCurrentTimeInVienna } from "@/lib/utils";

  function updateLocalTime() {
    const localTimeElement = document.getElementById("local-time");

    if (!localTimeElement) {
      console.error('Element with id "local-time" not found');
      return;
    }

    const formattedTime = getCurrentTimeInVienna();

    localTimeElement.innerHTML = formattedTime;
  }

  setInterval(updateLocalTime, 1000);
</script>

